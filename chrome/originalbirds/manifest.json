{
	"manifest_version": 3,
	"name": "Original Birds",
	"version": "1.0",
	"description": "A simple extension that adds UI to indicate legacy Twitter verified status.",

	// "icons": {
	//   "16": "images/icon-16.png",
	//   "32": "images/icon-32.png",
	//   "48": "images/icon-48.png",
	//   "128": "images/icon-128.png"
	// },

	"content_scripts": [
		{
			"matches": ["https://*.twitter.com/*"],
			"runAt" : "document_start",
			"js": ["scripts/content.js"]
		}
	],

	"background": {
		"service_worker": "scripts/background.js"
	},

	"permissions": [
		"storage",
		"unlimitedStorage"
	]
}
